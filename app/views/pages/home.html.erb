    <!--TAKE THIS -->
    <div class="col-md-3">
      <div class="card reset">
        <div class="img-wrap"><%=  image_tag(game[0].image, :class => "card-img-top") %></div>
        <div class="card-body">
          <h4 class="card-title title"><%= game[0].name %></h4>
          <p class="card-text"></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price: <%= game[0].price %></li>
          <li class="list-group-item">Stock:  <%= game[0].stock %></li>
        </ul>
        <div class="card-body">
          <% if @current_user.present? %>
            <a href="<%= game_path(game[0].id) %>" class="btn btn-secondary">More Information</a>
            <% end %>
        </div>
        <div class="card-body">
          <% if game[0].stock> 0  %>
            <a href="<%= new_order_path(:game => game[0].id) %>" class="btn btn-secondary">Purchase</a>
          <% else %>
