<div class="rows">
  <div class="col-md-4 offset-md-4">
    <h1>Welcome to the Home Page</h1>
  </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="slide" src="http://www.fillmurray.com/350/350" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="slide" src="http://www.fillmurray.com/350/350" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="slide" src="http://www.fillmurray.com/200/200" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <% @game.each_slice(2) do |game| %>
  <div class="row">
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <%=  image_tag(game[0].image, :class => "card-img-top") %>
        <div class="card-body">
          <h8 class="card-title"><%= game[0].name %></h8>
          <p class="card-text"></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price:<%= game[0].price %></li>
          <li class="list-group-item">Stock:<%= game[0].stock %></li>
        </ul>
        <div class="card-body">
          <a href="<%= game_path(game[0].id) %>" class="card-link">More Information</a>
          <a href="#" class="card-link">Purchase</a>
        </div>
      </div>
    </div>
    <div class="col-sm">

    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <%=  image_tag(game[1].image, :class => "card-img-top") %>
        <div class="card-body">
          <h8 class="card-title"><%= game[1].name %></h8>
          <p class="card-text"></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price:<%= game[1].price %></li>
          <li class="list-group-item">Stock:<%= game[1].stock %></li>
        </ul>
        <div class="card-body">
          <a href="<%= game_path(game[1].id) %>" class="card-link">More Information</a>
          <a href="#" class="card-link">Purchase</a>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
