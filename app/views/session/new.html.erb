<h1>Create A Login</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |form| %>

<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="basic-addon1"><%= form.label :email %></span>
</div>
<%= form.email_field :email, :class => 'form-control', :placeholder='Email' %>
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="basic-addon1"><%= form.label :user_name %></span>
</div>
<%= form.user_name_field :user_name, :class => 'form-control', :placeholder='The Muffin Man!'%>
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="basic-addon1"><%= form.label :adress %></span>
</div>
<%= form.adress_field :adress, :class => 'form-control', :placeholder='5 chicken street'%>
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="basic-addon1"><%= form.label :password %></span>
</div>
<%= form.password_field :password, :class => 'form-control', :placeholder='password1'%>
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
  <span class="input-group-text" id="basic-addon1"><%= form.label :password_confirmation %></span>
</div>
<%= form.password_confirmation_field :password_confirmation, :class => 'form-control', :placeholder='The Muffin Man!'%>
</div>

  <%= f.submit "Sign up!", :class => "btn btn-primary" %>
<% end %>
