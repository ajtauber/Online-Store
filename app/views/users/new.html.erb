<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ol>
<% end %>
<div class="jumbotron">
  <h1>Create Login</h1>
  <%= form_for @user do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, :class => 'form-control', :placeholder => '360noScope@gmail.com' %>
    </div>
    <div class="form-group">
      <%= form.label :user_name %>
      <%= form.text_field :user_name, :class => 'form-control', :placeholder => 'xXSn1p3r_GawDXx' %>
    </div>
    <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, :class => 'form-control', :placeholder => '5 Chicken Street' %>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, :class => 'form-control', :placeholder =>'password1'%>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, :class => 'form-control', :placeholder => '*********'%>
    </div>
      <%= form.submit "Sign up!", :class => "hvr-grow btn btn-primary" %>
  <% end %>
</div>
