<div class="container">
  <h1>Order</h1>
  <%= form_tag orders_path do %>
  <article>
    <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
    <% end %>
    <label class="amount">
    <span>Amount: $<%= @game.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-description="Ordering Games"
  data-amount=<%= @game.price * 100 %>
  data-locale="auto"></script>
  <% end %>

  <% @order.games.each do |game|  %>
    <%= game.name %>
<% end  %>

<div class="controls">
  <%= link_to 'Back', game_path(params[:game]) %>
</div>
</div>
