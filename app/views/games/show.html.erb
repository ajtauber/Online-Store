<div class="jumbotron">
  <h1 class="display-4"><%= @game.name %></h1>
  <%= image_tag(@game.image, :class => "img-fluid") %>
  <ul class="list-unstyled">
    <li>Release Date: <%= @game.release_date %></li>
    <li>Genre: <%= @game.genre %></li>
    <li>Price: $<%= @game.price %></li>
    <li>Stock: <%= @game.stock %></li>
    <div class="max-width-text">
    <li>Desciption:<%= @game.description %></li>
    </div>
  </ul>
  <%= link_to '+', new_order_path(:game => @game.id), :class => "btn btn-primary btn-lg" %> or <%= link_to '-'', new_order_path(:game => @game.id), :class => "btn btn-primary btn-lg" %>
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= @id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
</div>
