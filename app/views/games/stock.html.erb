<div class="container">
  <% @game.each_slice(1) do |game| %>
  <div class="row">
    <div class="col-sm">
      <%= game[0].name %>
    </div>
    <div class="col-sm">
      <%= game[0].price %>
    </div>
    <div class="col-sm">
      <%= game[0].stock %> | + & -
    </div>
  </div>
  <% end %>
</div>
